<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="guesty_crm_lead_view_form" model="ir.ui.view">
        <field name="name">guesty.crm.lead.form</field>
        <field name="inherit_id" ref="crm.crm_lead_view_form" />
        <field name="model">crm.lead</field>
        <field name="arch" type="xml">
            <xpath expr="//notebook/page[1]" position="before">
                <page string="Reservation">
                    <group>
                        <group>
                            <field name="check_in" required="1" />
                            <field name="check_out" required="1" />
                        </group>
                        <group>

                        </group>
                    </group>
                    <button
                        name="search_availability"
                        type="object"
                        string="Check Availability"
                        class="oe_highlight"
                    />
                    <div class="oe_clear" />
                    <notebook>
                        <page string="Availability">


                            <field name="pms_available_listing_ids">
                                <tree>
                                    <field name="property_id" />
                                    <field name="price" />
                                    <field name="currency" />
                                    <field name="have_quotation" invisible="1" />
                                    <button
                                        name="do_quote"
                                        type="object"
                                        string="Create Quotation"
                                        class="btn btn-primary"
                                        attrs="{'invisible': [('have_quotation', '=', True)]}"
                                    />
                                    <button
                                        name="do_quote"
                                        type="object"
                                        string="Show Quotation"
                                        class="btn btn-primary"
                                        attrs="{'invisible': [('have_quotation', '=', False)]}"
                                    />
                                </tree>
                            </field>

                        </page>
                    </notebook>
                </page>
            </xpath>
        </field>
    </record>
    <record id="action_reservation_multi_quote" model="ir.actions.act_window">
        <field name="name">Merge</field>
        <field name="res_model">sale.order.multi.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
        <field
            name="binding_model_id"
            ref="connector_guesty.model_pms_available_listing"
        />
        <field name="binding_view_types">list</field>
    </record>
</odoo>
