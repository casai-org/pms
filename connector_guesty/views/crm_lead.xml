<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="guesty_crm_lead_view_form" model="ir.ui.view">
        <field name="name">guesty.crm.lead.form</field>
        <field name="inherit_id" ref="crm.crm_lead_view_form" />
        <field name="model">crm.lead</field>
        <field name="arch" type="xml">
            <xpath expr="//notebook/page[1]" position="before">
                <page string="Reservation">
                    <h1>Configure Reservation</h1>
                    <group>
                        <group>
                            <field name="check_in" required="1" />
                            <field name="check_out" required="1" />
                        </group>
                        <group>

                        </group>
                    </group>
                    <button
                        name="search_availability"
                        type="object"
                        string="Check Availability"
                    />

                    <field name="pms_available_listing_ids">
                        <tree>
                            <field name="property_id" />
                            <field name="price" />
                            <field name="currency" />
                            <field name="have_quotation" invisible="1" />
                            <button
                                name="do_quote"
                                type="object"
                                string="Create Quotation"
                                class="btn btn-primary"
                                attrs="{'invisible': [('have_quotation', '=', True)]}"
                            />
                            <button
                                name="do_quote"
                                type="object"
                                string="Show Quotation"
                                class="btn btn-primary"
                                attrs="{'invisible': [('have_quotation', '=', False)]}"
                            />
                        </tree>
                    </field>

                </page>
            </xpath>
        </field>
    </record>
</odoo>
