<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="pms_guesty_calendar_gantt_view" model="ir.ui.view">
        <field name="name">pms.guesty.calendar</field>
        <field name="model">pms.guesty.calendar</field>
        <field name="arch" type="xml">
            <gantt
                date_stop="date_stop"
                date_start="date_start"
                string="Availability"
                create="0"
                default_group_by="property_id"
                decoration-success="state == 'available'"
                color="color"
            >
                <field name="date_start" />
                <field name="state" />
                <field name="color" />
            </gantt>
        </field>
    </record>

    <record id="pms_guesty_calendar_graph_view" model="ir.ui.view">
        <field name="name">pms.guesty.calendar</field>
        <field name="model">pms.guesty.calendar</field>
        <field name="arch" type="xml">
            <graph string="Calendar">
                <field name="listing_date" group="1" />
                <field name="state" group="1" />
            </graph>
        </field>
    </record>

    <record id="pms_guesty_calendar_calendar_view" model="ir.ui.view">
        <field name="name">pms.guesty.calendar</field>
        <field name="model">pms.guesty.calendar</field>
        <field name="arch" type="xml">
            <calendar
                date_start="date_start"
                date_stop="date_stop"
                string="Calendar"
                mode="month"
                color="color"
            >
                <field name="property_id" filters="1" />
                <field name="state" />
            </calendar>
        </field>
    </record>

    <record id="pms_guesty_calendar_action" model="ir.actions.act_window">
        <field name="name">Property Calendar</field>
        <field name="res_model">pms.guesty.calendar</field>
        <field name="view_mode">calendar,graph</field>
    </record>
    <menuitem
        id="pms_guesty_calendar_root_menu"
        name="Properties Calendar"
        parent="crm.crm_menu_report"
        action="pms_guesty_calendar_action"
    />
</odoo>
