<odoo>
    <record id="guesty_view_partner_form" model="ir.ui.view">
        <field name="name">guesty.view.partner.form</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_form" />
        <field name="priority">20</field>
        <field name="arch" type="xml">
            <xpath expr="//page[@name='internal_notes']" position="before">
                <page string="Guesty">
                    <label for="guesty_ids" />
                    <field name="guesty_ids">
                        <tree>
                            <field name="partner_id" />
                            <field name="guesty_id" />
                        </tree>
                    </field>
                </page>
            </xpath>
        </field>
    </record>

    <record id="res_partner_view_form_custom" model="ir.ui.view">
        <field name="name">res.partner.view.form.custom</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='parent_id']" position="attributes">
                <attribute name="placeholder">Company</attribute>
            </xpath>
            <xpath expr="//sheet/div/div" position="inside">
                <field name="parent_ids" placeholder="Company" widget="res_partner_many2one" domain="[('is_company', '=', True)]" context="{'default_is_company': True, 'show_vat': True}" attrs="{'invisible': ['|', '&amp;', ('is_company','=', True),('parent_id', '=', False),('company_name', '!=', False),('company_name', '!=', '')]}"/>
            </xpath>
            <xpath expr="//sheet/div/div/field[@name='parent_id']" position="attributes">
                <attribute name="attrs">{'invisible': ['|', '|', '|', '&amp;', ('company_type', '=', 'company'), ('company_type', '=', 'person'), ('is_company','=', True), ('parent_id', '=', False),('company_name', '!=', False),('company_name', '!=', '')]}</attribute>
            </xpath>
        </field>
    </record>
</odoo>
