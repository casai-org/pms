<odoo>


    <record id="guesty_calendar_report_calendar_view" model="ir.ui.view">
        <field name="name">Calendar</field>
        <field name="model">guesty.calendar.report</field>
        <field name="arch" type="xml">
            <calendar
                string="Leads Generation"
                create="0"
                mode="month"
                date_start="start_date"
                date_stop="end_date"
                color="id"
                hide_time="true"
                event_limit="5"
            >
                <field name="listing_id" />
            </calendar>
        </field>
    </record>

    <record id="guesty_calendar_report_action" model="ir.actions.act_window">
        <field name="name">Calendar Report</field>
        <field name="res_model">guesty.calendar.report</field>
        <field name="view_mode">tree,calendar,form</field>
    </record>


    <menuitem
        name="Calendar Report"
        id="guesty_calendar_report_menu"
        action="guesty_calendar_report_action"
    />
</odoo>
